<component
	xmlns="http://maven.apache.org/ASSEMBLY-COMPONENT/2.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/ASSEMBLY-COMPONENT/2.0.0 http://maven.apache.org/xsd/assembly-component-2.0.0.xsd">

	<dependencySets>
		<dependencySet>
			<outputDirectory>lib/cp</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<useTransitiveFiltering>true</useTransitiveFiltering>
			<fileMode>0755</fileMode>
			<includes>
				<include>org.apache.maven.resolver:*:*</include>
				<include>org.apache.maven:*:*</include>
				<include>org.slf4j:*:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib/cp</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<fileMode>0755</fileMode>
			<includes>
				<include>org.glassfish:jakarta.json:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib/mp</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<useTransitiveFiltering>true</useTransitiveFiltering>
			<fileMode>0755</fileMode>
			<includes>
				<include>org.controlsfx:*</include>
				<include>org.fxmisc.richtext:richtextfx</include>
				<include>info.picocli:picocli</include>
				<include>org.apache.commons:commons-lang3</include>
				<include>commons-io:commons-io</include>
			</includes>
			<excludes>
				<exclude>org.openjfx:*</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib/mp</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<fileMode>0755</fileMode>
			<includes>
				<include>jakarta.json:jakarta.json-api</include>
				<include>jakarta.json.bind:jakarta.json.bind-api</include>
				<include>org.eclipse:yasson</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>lib/fx</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<useTransitiveFiltering>true</useTransitiveFiltering>
			<fileMode>0755</fileMode>
			<includes>
				<include>*:${javafx.platform}</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>modules/int</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<fileMode>0755</fileMode>
			<includes>
				<include>dev.jshfx:dev.jshfx.base</include>
				<include>dev.jshfx:dev.jshfx.fonts</include>
				<include>dev.jshfx:dev.jshfx.automatic</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>modules/ext</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<fileMode>0755</fileMode>
			<includes>
				<include>dev.jshfx:dev.jshfx.access</include>
				<include>dev.jshfx:dev.jshfx.jfxext</include>
			</includes>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<fileSet>
			<directory>src/main/conf</directory>
			<outputDirectory>conf</outputDirectory>
			<includes>
				<include>**/*.properties</include>
			</includes>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>src/main/scripts</directory>
			<outputDirectory>.</outputDirectory>
			<includes>
				<include>**/options*</include>
			</includes>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>working/src</directory>
			<outputDirectory>src</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
	</fileSets>
</component>
